@using Donatello.Extensions
@using Donatello.Models

@{
    var toast = TempData.Get<ToastModel>("Toast");
}

@if (toast != null)
{
    var toastCss = toast.Type == ToastType.success ? "bg-success text-white" :
                   toast.Type == ToastType.info ? "bg-info text-dark" :
                   toast.Type == ToastType.warning ? "bg-warning text-dark" :
                   "bg-danger text-white";

    <div class="toast align-items-center @toastCss border-0"
         role="alert"
         aria-live="assertive"
         aria-atomic="true"
         style="position: fixed; top: 1rem; right: 1rem; z-index: 1080;">
        <div class="d-flex">
            <div class="toast-body">
                @toast.Message
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto"
                    data-bs-dismiss="toast"
                    aria-label="Close"></button>
        </div>
    </div>
}
